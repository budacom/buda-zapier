name: Buda Zapier

on: [push]

jobs:
  build:

    runs-on: ubuntu-latest

    strategy:
      node-version: 10.x

    steps:
    - uses: actions/checkout@v2

    - name: Use Node.js 10.x
      uses: actions/setup-node@v1
      with:
        node-version: 10.x

    - run: npm install -g zapier-platform-cli
    - run: npm install
    - run: npm test
      env:
        CI: true